<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Home</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <h1>@ramizwebdeveloper</h1>

        <div class="container d-flex align-items-start gap-4 m-4">
            <% allBlogs.forEach(blog=> { %>

                <div class="card" style="width: 250px;">
                    <img src="<%= blog.coverImageURL %>" style="height: 200px;" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= blog.title %>
                        </h5>
                        <p class="card-text">
                            <%= blog.description %>
                        </p>
                        <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read More</a>
                    </div>
                </div>
                <% }) %>
        </div>
        <%- include('./partials/scripts') %>
</body>

</html>